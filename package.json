{
  "name": "praisecue-v2",
  "version": "1.0.0",
  "description": "**PraiseCue** is a lightweight local-network presentation tool for displaying Bible verses, worship songs, and announcements on screens around your church or gathering.",
  "main": "eslint.config.js",
  "scripts": {
    "client": "cd client && npm start",
    "server": "cd server && node index.js",
    "build": "cd client && npm run build",
    "serve-client": "serve -s client/build -l 80",
    "dev": "concurrently -k -n \"SERVER,CLIENT\" -c \"cyan,green\" \"npm run server\" \"npm run serve-client\"",
    "build-and-dev": "npm run build && npm run dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sam-malanchuk/PraiseCue.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sam-malanchuk/PraiseCue/issues"
  },
  "homepage": "https://github.com/sam-malanchuk/PraiseCue#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
